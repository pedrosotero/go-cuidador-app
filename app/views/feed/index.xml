<Alloy>
    <Collection src="caregiver"/>
    <Window class="container" id="win">
        <Menu id="menu" platform="android">
            <MenuItem title="Configurações" onClick="onOpenSettingsClick"/>
            <MenuItem title="Pesquisar" showAsAction="Titanium.Android.SHOW_AS_ACTION_ALWAYS">
                <ActionView>
                    <SearchView ns="Ti.UI.Android" hintText="Pesquisar..." id="searchView"/>
                </ActionView>
            </MenuItem>
            <MenuItem title="Favoritos" onClick="onFavoritesClick"/>
        </Menu>
        <ListView id="listView">
            <Templates>
                <Require src="templates/caregiver"/>
            </Templates>
            <ListSection dataCollection="caregiver">
                <ListItem template="caregiver"
                          name:text="{full_name}"
                          types:text="{types}"
                          rate:text="{rate}"
                          avatar:image="{avatar}"
                          neiborhodd:text="Bairro: {neighborhood}"/>
            </ListSection>
        </ListView>
    </Window>
</Alloy>