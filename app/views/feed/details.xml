<Alloy>
    <Model src="caregiver"/>
    <Window id="win" class="window" onOpen="setTitleActionBar">
        <ActionBar displayHomeAsUp="true" onHomeIconItemSelected="close"/>
        <Menu id="menu" platform="android">
            <MenuItem title="Ligar" onClick="onCallClick"/>
            <MenuItem title="Enviar E-mail" onClick="onMailClick"/>
            <!--<MenuItem title="Favoritar"/>-->
        </Menu>
        <View clas="container">
            <ScrollView>
                <ImageView class="avatar"
                           image="{caregiver.avatar}"></ImageView>
                <View class="rate">
                    <Label class="rateLabel" text="{caregiver.rate}"/>
                    <ImageView image="/images/rating-star.png" class="rateImage"/>
                    <Button class="rateButton" onClick="onRateClick"/>
                </View>
                <Label class="description" text="Bairro: {caregiver.neighborhood}"/>
                <Label class="description" text="Especialidades: {caregiver.types}"/>
                <Label class="description" text="{caregiver.description}"/>
            </ScrollView>
        </View>
        <View class="transparentView" visible="false" id="transparentView">
            <View class="lightBox">
                <View class="close">
                    <ImageView class="closeIcon" image="/images/close-icon.png"/>
                    <Button class="closeButton" onClick="onCloseButtonClick"/>
                </View>
                <View class="rateBox">
                    <ImageView image="/images/rating-star.png" class="rateImage"/>
                    <Picker onChange="report" id="picker">
                        <Column>
                            <Row title="1"/>
                            <Row title="2"/>
                            <Row title="3"/>
                            <Row title="4"/>
                            <Row title="5"/>
                        </Column>
                    </Picker>
                </View>
                <Label text="Conte-nos sua opiniÃ£o (opcional)" class="titleClose"/>
                <TextField id="textField" class="text"/>
                <Button title="Enviar" class="sendButton" onClick="onSubmitClick"/>
            </View>
        </View>
    </Window>
</Alloy>