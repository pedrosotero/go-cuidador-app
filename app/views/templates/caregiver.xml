<Alloy>
    <ItemTemplate name="caregiver">
        <View>
            <ImageView bindId="avatar" class="avatar"/>
            <Label class="name" bindId="name"/>
            <Label class="excerpt" bindId="types"/>
            <Label class="neighborhood" bindId="neighborhood"/>
            <View class="rate">
                <Label class="rateLabel" bindId="rate"/>
                <ImageView image="/images/rating-star.png" class="rateImage"/>
            </View>
            <Button bindId="card"/>
        </View>
    </ItemTemplate>
</Alloy>