<Alloy>
    <Window id="win" class="noActionBar">
        <ActionBar displayHomeAsUp="true" title="Configurações" onHomeIconItemSelected="close"/>
        <View class="boxForm">
            <Require src="form/TextField" tipo="password" hintText="Nova Senha" id="password"></Require>
            <Require src="form/TextField" tipo="password" hintText="Repita Nova Senha" id="repassword"></Require>
            <View class="form-group">
                <Button class="btn" onClick="onSubmitClick">Salvar</Button>
            </View>
        </View>
    </Window>
</Alloy>
